<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/css/style.css">
    <title>Chess Game</title>
</head>
<body>
    <div class="game-container flex flex-col items-center justify-center min-h-screen bg-zinc-900 text-white">
        
        <!-- Role Display -->
        <div id="player-role" class="role-display">
            <span class="role-badge spectator-role">üëÅÔ∏è Connecting...</span>
        </div>
        
        <!-- Player Count Display -->
        <div id="player-count" class="player-count">
            <div class="count-item">
                <span class="dot white-dot"></span> White: Waiting...
            </div>
            <div class="count-item">
                <span class="dot black-dot"></span> Black: Waiting...
            </div>
            <div class="count-item">
                <span class="dot spectator-dot"></span> Spectators: 0
            </div>
        </div>
        
        <!-- Timers -->
        <div class="timer-container w-full max-w-[550px] flex justify-between mb-2 font-mono px-4">
            <div id="white-timer" class="timer px-4 py-2 bg-zinc-800 rounded border border-white/10">White: 10:00</div>
            <div id="black-timer" class="timer px-4 py-2 bg-zinc-800 rounded border border-white/10">Black: 10:00</div>
        </div>

        <!-- Chess Board -->
        <div class="chessboard mb-2"></div>

        <!-- Control Buttons -->
        <div class="button-container flex gap-4 mt-2">
            <button id="draw-btn" class="px-6 py-2 bg-amber-600 hover:bg-amber-700 rounded-md font-bold transition-all active:scale-95">
                Offer Draw
            </button>
            <button id="resign-btn" class="px-6 py-2 bg-red-600 hover:bg-red-700 rounded-md font-bold transition-all active:scale-95">
                Resign
            </button>
        </div>
    </div>
    
    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js" integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js"></script>
    <script src="/js/playchess.js"></script>
</body>
</html>
